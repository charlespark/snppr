<p>Find me in app/views/categories/edit.html.erb</p>

<% provide(:title, "Edit Category") %>
<h1>Update your category title</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:category, url: edit_category_path) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :title %>
      <%= f.text_field :title, %>

      <p>
      </p>

      <%= f.submit "Edit Category", class: "btn btn-primary" %>
    <% end %>

  </div>
</div>